<?xml version = "1.0" encoding = "UTF-8"?>

<web-app>

    <servlet>
        <servlet-name>authenticate-user</servlet-name>
        <servlet-class>auth_servlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>createNewUser</servlet-name>
        <servlet-class>createUser_servlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>context-invalid</servlet-name>
        <jsp-file>/invalidUser.html</jsp-file>
    </servlet>

    <servlet>
        <servlet-name>launch_dashboard</servlet-name>
        <jsp-file>/dashboard.jsp</jsp-file>
    </servlet>
    
    <servlet>
        <servlet-name>send-mail</servlet-name>
        <servlet-class>pushMail_servlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>get_inbox_mails</servlet-name>
        <servlet-class>get_inbox_mail_servlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>get-outbox-mails</servlet-name>
        <servlet-class>get_outbox_mail_servlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>authenticate-user</servlet-name>
        <url-pattern>/authenticate</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>createNewUser</servlet-name>
        <url-pattern>/signUp.html/create</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>launch_dashboard</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>
    

    <servlet-mapping>
        <servlet-name>context-invalid</servlet-name>
        <url-pattern>/invalidUser</url-pattern>
    </servlet-mapping>
    
    
    <servlet-mapping>
        <servlet-name>send-mail</servlet-name>
        <url-pattern>/dashboard/push</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>get_inbox_mails</servlet-name>
        <url-pattern>/get-inbox-mail</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>get-outbox-mails</servlet-name>
        <url-pattern>/get-outbox-mail</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

</web-app>